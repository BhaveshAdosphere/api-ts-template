{
    "name": "api-ts",
    "version": "1.0.0",
    "description": "api starter template",
    "main": "index.js",
    "scripts": {
        "build": "npx tsc",
        "clean:build": "rm -rf dist",
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky install",
        "start": "npm run build && cross-env NODE_ENV=production node dist/server.js"
    },
    "keywords": [],
    "author": "adosphere",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.12.7",
        "@types/source-map-support": "^0.5.10",
        "colorette": "^2.0.20",
        "cross-env": "^7.0.3",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "axios": "^1.6.8",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "express": "^4.19.2",
        "moment": "^2.30.1",
        "source-map-support": "^0.5.21",
        "winston": "^3.13.0"
    },
    "engines": {
        "node": "20.x"
    }
}
