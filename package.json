{
    "name": "api-ts",
    "version": "1.0.0",
    "description": "api starter template",
    "main": "index.js",
    "scripts": {
        "prettier": "prettier --write src/.",
        "lint": "eslint src/.",
        "build": "npx tsc",
        "start": "npm run build && SET cross-env NODE_ENV=production && node dist/server.js",
        "dev": "SET cross-env NODE_ENV=development && nodemon src/server.ts"
    },
    "keywords": [],
    "author": "adosphere",
    "license": "ISC",
    "lint-staged": {
        "src/**/*.{js,ts}": [
            "git add .",
            "npm run lint",
            "npm run prettier",
            "grep -nH 'console\\.log' -- ./src/ && exit 1 || exit 0"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.20",
        "@types/node": "^20.8.9",
        "cross-env": "^7.0.3",
        "husky": "^8.0.0",
        "lint-staged": "^15.0.2",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.52.0",
        "express": "^4.18.2",
        "winston": "^3.11.0"
    }
}
